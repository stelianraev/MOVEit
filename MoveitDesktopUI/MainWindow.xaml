<Window x:Class="MoveitDesktopUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoveitDesktopUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="508" Width="800">
    <Grid Margin="10,10,10,13">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="33"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label x:Name="UsernameLabel" Content="Username" HorizontalAlignment="Left" Grid.Row="0" Margin="118,43,0,0" VerticalAlignment="Top" Grid.RowSpan="2"  Width="87"/>
        <TextBox x:Name="UsernameInput" HorizontalAlignment="Left" Margin="210,43,0,0" Grid.Row="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="312" Height="23" Grid.ColumnSpan="3"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Grid.Row="1" Margin="118,9,0,0" VerticalAlignment="Top" Width="87"/>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Margin="210,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="312" Height="23" Grid.ColumnSpan="3"/>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="309,19,0,0" VerticalAlignment="Top" Grid.Row="2" Width="114" Click="Button_Click" Grid.ColumnSpan="3"/>

        <TreeView x:Name="LocalFileTree" Grid.Column="0" Visibility="Hidden"/>
        <GridSplitter Width="5" HorizontalAlignment="Stretch" Grid.Column="1" Visibility="Hidden"/>
        <TreeView x:Name="RemoteFileTree" Grid.Column="2" Visibility="Hidden"/>
    </Grid>
</Window>
